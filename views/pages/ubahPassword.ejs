        <div class="mb-6">
            <h1 class="text-4xl text-fontdark font-extrabold dark:text-white">Ubah Password</h1>
        </div>
        
        <form class="w-full mx-auto" method="post" action="/changePass">
            <div class="w-full p-6 bg-primary-100 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <div class="relative z-0 w-full mb-5 group">
                    <div class="relative">
                        <input type="password" name="passlama" id="passlama" value="<%= old?.passlama || '' %>" class="block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " />
                        <i class="fa fa-eye absolute right-2 top-1/2 -translate-y-1/2 text-gray-200 hover:text-white cursor-pointer"
                            onclick="togglePassword('passlama', this)" aria-hidden="true"></i>
                        <label for="passlama" class="absolute text-sm text-gray-100 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-gray-100 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Masukkan Password Lama</label>
                    </div>
                    <% if (errors) { 
                        const err = errors.find(e => e.path === 'passlama'); %>
                        <% if (err) { %>
                            <p class="text-red-700 text-sm mt-1"><%= err.msg %></p>
                        <% } %>
                    <% } %>
                </div>
                <div class="relative z-0 w-full mb-5 group">
                    <div class="relative">
                        <input type="password" name="passbaru" id="passbaru" value="<%= old?.passbaru || '' %>" class="block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " />
                        <i class="fa fa-eye absolute right-2 top-1/2 -translate-y-1/2 text-gray-200 hover:text-white cursor-pointer"
                            onclick="togglePassword('passbaru', this)" aria-hidden="true"></i>
                        <label for="passbaru" class="absolute text-sm text-gray-100 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-gray-100 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Masukkan Password Baru</label>
                    </div>
                    <% if (errors) { 
                        const err = errors.find(e => e.path === 'passbaru'); %>
                        <% if (err) { %>
                            <p class="text-red-700 text-sm mt-1"><%= err.msg %></p>
                        <% } %>
                    <% } %>
                </div>
                <div class="relative z-0 w-full mb-5 group">
                    <div class="relative">
                        <input type="password" name="confirmPass" id="confirmPass" value="<%= old?.confirmPass || '' %>" class="block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " />
                        <i class="fa fa-eye absolute right-2 top-1/2 -translate-y-1/2 text-gray-200 hover:text-white cursor-pointer"
                            onclick="togglePassword('confirmPass', this)" aria-hidden="true"></i>
                        <label for="confirmPass" class="absolute text-sm text-gray-100 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-gray-100 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Konfirmasi Password Baru</label>
                    </div>
                    <% if (errors) { 
                        const err = errors.find(e => e.path === 'confirmPass'); %>
                        <% if (err) { %>
                            <p class="text-red-700 text-sm mt-1"><%= err.msg %></p>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <div class="mt-6">
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Submit</button>            
            </div>
        </form>

        <script src="/js/toggle-password.js"></script>