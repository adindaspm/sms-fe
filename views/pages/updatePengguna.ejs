
        <div class="mb-6">
            <h1 class="text-4xl text-font font-extrabold dark:text-gray-100">Tambah Pengguna</h1>
        </div>
        
        <form class="w-full mx-auto" role="form" method="post" action="/users/<%= user.id %>/update">
            <div class="w-full p-6 bg-primary-30 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <input type="text" name="id" id="id" value="<%= old?.id || user.id || '' %>" hidden />
                
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="name" id="name" value="<%= typeof old?.name !== 'undefined' ? old.name : user.name %>" class="block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-gray-100 dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-gray-300 peer" placeholder=" "  />
                    <label for="name" class="absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-gray-300 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Nama Lengkap</label>
                    <% if (errors) { 
                        const err = errors.find(e => e.path === 'name'); %>
                        <% if (err) { %>
                            <p class="text-red-700 text-sm mt-1"><%= err.msg %></p>
                        <% } %>
                    <% } %>
                </div>
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="nip" id="nip" value="<%= typeof old?.nip !== 'undefined' ? old.nip : user.nip %>" class="block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-gray-100 dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-gray-300 peer" placeholder=" "  />
                    <label for="nip" class="peer-focus:font-medium absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-gray-300 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">NIP</label>
                    <% if (errors) { 
                        const err = errors.find(e => e.path === 'nip'); %>
                        <% if (err) { %>
                            <p class="text-red-700 text-sm mt-1"><%= err.msg %></p>
                        <% } %>
                    <% } %>
                </div>
                <div class="relative z-0 w-full mb-5 group">
                    <input type="email" name="email" id="email" value="<%= typeof old?.email !== 'undefined' ? old.email : user.email %>" class="block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-gray-100 dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-gray-300 peer" placeholder=" "  />
                    <label for="email" class="peer-focus:font-medium absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-gray-300 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Email</label>
                    <% if (errors) { 
                        const err = errors.find(e => e.path === 'email'); %>
                        <% if (err) { %>
                            <p class="text-red-700 text-sm mt-1"><%= err.msg %></p>
                        <% } %>
                    <% } %>
                </div>
                <div class="relative z-0 w-full mb-5 group">
                    <select name="province" id="province" class="bg-primary-50 block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-gray-100 dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-gray-300 peer" >
                        <option value="<%= encodeURIComponent(JSON.stringify(user.satker.province)) %>" class="bg-primary-30"><%= user.satker.province.name %></option>
                        <% listProvinces.forEach(p => { 
                            const isSelected = old?.province && JSON.parse(decodeURIComponent(old.province)).id === p.id; %>
                            <option value="<%= encodeURIComponent(JSON.stringify(p)) %>" class="bg-primary-30" <%= isSelected ? 'selected' : '' %>><%= p.name %></option>
                        <% }) %>
                      </select>                      
                    <label for="province" class="peer-focus:font-medium absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-gray-300 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Provinsi</label>
                </div>
                <div class="relative z-0 w-full mb-5 group">
                    <select name="satker" id="satker" class="bg-primary-50 block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-gray-100 dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-gray-300 peer" >
                        <option value="<%= encodeURIComponent(JSON.stringify(user.satker)) %>" class="bg-primary-30"><%= user.satker.name %></option>
                        <% listSatkers.forEach(s => { 
                            const isSelected = old?.satker && JSON.parse(decodeURIComponent(old.satker)).id === s.id; %>
                            <option class="bg-primary-30" value="<%= encodeURIComponent(JSON.stringify(s)) %>" data-province="<%= s.provinceCode %>" <%= isSelected ? 'selected' : '' %>><%= s.name %></option>
                        <% }) %>
                      </select>                      
                    <label for="satker" class="peer-focus:font-medium absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-gray-300 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Satuan Kerja</label>
                </div>
                <div class="relative z-0 w-full mb-5 group hidden" id="deputiField">
                    <select name="deputi" id="deputi" class="bg-primary-50 block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-gray-100 dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-gray-300 peer" >
                        <option value="<%= encodeURIComponent(JSON.stringify(user.deputi)) %>" class="bg-primary-30"><%= user.namaDeputi %></option>
                        <% listDeputis.forEach(d => { 
                            let isSelected = false;
                            if (old?.deputi) {
                                isSelected = JSON.parse(decodeURIComponent(old.deputi)).id === d.id;
                            } else if (user?.direktorat) {
                                isSelected = d.code === user.direktorat.code.substring(0, 2);
                            }
                        %>
                        <option class="bg-primary-30" value="<%= encodeURIComponent(JSON.stringify(d)) %>" data-satker="0000" <%= isSelected ? 'selected' : '' %>><%= d.name %></option>
                        <% }) %>
                    </select>                      
                    <label for="deputi" class="peer-focus:font-medium absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-gray-300 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Deputi</label>
                </div>
                <div class="relative z-0 w-full mb-5 group hidden" id="direktoratField">
                    <select name="direktorat" id="direktorat" class="bg-primary-50 block py-2.5 px-0 w-full text-sm text-gray-100 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-gray-100 dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-gray-300 peer" >
                        <option value="<%= encodeURIComponent(JSON.stringify(user.direktorat)) %>" class="bg-primary-30"><%= user.namaDirektorat %></option>
                        <% listDirektorats.forEach(d => { 
                            const isSelected = old?.direktorat && JSON.parse(decodeURIComponent(old.direktorat)).id === d.id; %>
                            <option class="bg-primary-30" value="<%= encodeURIComponent(JSON.stringify(d)) %>" data-deputi="<%= d.deputiCode %>" <%= isSelected ? 'selected' : '' %>><%= d.name %></option>
                        <% }) %>
                      </select>                      
                    <label for="direktorat" class="peer-focus:font-medium absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-gray-300 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Direktorat</label>
                </div>

                <div class="relative z-0 w-full mb-5 group">   
                    <p class="peer-focus:font-medium absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-gray-300 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Upload Foto Profil</p>                                             
                    <div class="flex items-center justify-center w-full">
                    <label for="dropzone-file" class="mt-3 flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-primary-30 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-primary-50 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <svg class="w-8 h-8 mb-4 text-gray-600 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
                            </svg>
                            <p class="mb-2 text-sm text-gray-600 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                            <p class="text-xs text-gray-600 dark:text-gray-400">SVG, PNG, JPG or GIF (MAX. 400x400px)</p>
                        </div>
                        <input name="fotoProfil" id="dropzone-file" type="file" class="hidden" />
                    </label>
                    </div> 
                </div>
            </div>
            <div class="flex justify-between">
                <div class="mt-6">
                    <button type="submit" class="text-gray-200 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Submit</button>            
                </div>
                <div class="mt-6">
                    <a href="/users">
                        <button type="button" class="text-gray-200 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Kembali</button>
                    </a>
                </div>
            </div>
        </form>
        
        <script src="/js/direktoratOption.js"></script>
        <script src="/js/satkerByProvince.js"></script>
