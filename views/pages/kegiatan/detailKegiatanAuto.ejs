       <div class="m-6">
            <h1 class="text-3xl text-font font-extrabold dark:text-white" ><%= kegiatan.name %></h1>
            <h2 class="text-xl text-font font-normal dark:text-white mb-6" ><%= kegiatan.direktoratPjName %></h2>
        </div>

        <!-- Main Tabs -->
        <div class="mb-4 border-b border-gray-200 dark:border-gray-700">
            <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" id="default-tab" data-tabs-toggle="#default-tab-content" role="tablist">
                <li class="me-2" role="presentation">
                    <button class="inline-block p-4 border-b-2 rounded-t-lg" id="umum-tab" data-tabs-target="#umum" type="button" role="tab" aria-controls="umum">Umum</button>
                </li>
                <li class="me-2" role="presentation">
                    <button class="inline-block p-4 border-b-2 rounded-t-lg hover:text-primary-600 hover:border-primary-100 dark:hover:text-primary-700" id="tahap-tab" data-tabs-target="#tahap" type="button" role="tab" aria-controls="tahap">Tahap</button>
                </li>
            </ul>
        </div>
        
        <!-- Main Tab Content -->
        <div id="default-tab-content">
            <!-- Tab Umum Content -->
            <div class="hidden p-4 rounded-lg bg-primary-30 dark:bg-gray-800" id="umum" role="tabpanel" aria-labelledby="umum-tab" >
                <form class="w-full mx-auto">
                    <!-- Umum form fields -->
                    <div class="relative z-0 w-full mb-5 group">
                        <input type="text" id="code_kegiatan" value="<%= kegiatan.code %>" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " disabled/>
                        <label for="code_kegiatan" class="absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Kode Kegiatan</label>
                    </div>
                    <div class="relative z-0 w-full mb-5 group">
                        <input type="text" id="nama_kegiatan" value="<%= kegiatan.name %>" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " disabled />
                        <label for="nama_kegiatan" class="absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Nama Aktivitas</label>
                    </div>
                    <div class="relative z-0 w-full mb-5 group">
                        <input type="text" id="program_kegiatan" value="<%= kegiatan.programName %>" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " disabled />
                        <label for="program_kegiatan" class="absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Nama Kegiatan</label>
                    </div>
                    <div class="grid md:grid-cols-2 md:gap-6">
                        <div class="relative z-0 w-full mb-5 group">
                            <input type="text" name="tanggal_mulai" id="tanggal_mulai" value="<%= new Date(kegiatan.startDate).toLocaleDateString() %>" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " disabled />
                            <label for="tanggal_mulai" class="peer-focus:font-medium absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Tanggal Mulai</label>
                        </div>
                        <div class="relative z-0 w-full mb-5 group">
                            <input type="text" name="tanggal_selesai" id="tanggal_selesai" value="<%= new Date(kegiatan.endDate).toLocaleDateString() %>" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " disabled />
                            <label for="tanggal_selesai" class="peer-focus:font-medium absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Tanggal Selesai</label>
                        </div>
                    </div>
                    <div class="relative z-0 w-full mb-5 group">
                        <input type="text" name="satker" id="satker" value="<%= kegiatan.satkerName %>" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " disabled />
                        <label for="satker" class="absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Satuan Kerja</label>
                    </div>   
                    <div class="relative z-0 w-full mb-5 group">
                        <input type="text" name="pj" id="pj" value="<%= kegiatan.direktoratPjName %>" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " disabled />
                        <label for="pj" class="absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Penanggung Jawab</label>
                    </div>                    
                    <!-- Progress Bar -->
                    <div class="relative z-0 w-full mb-5 group">
                        <div class="pt-2 5">
                            <div class="w-full bg-gray-200 rounded-full dark:bg-gray-700">
                                <div class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-full" style="width: <%= kegiatan.progress %>%"><%= kegiatan.progress %>%</div>
                            </div>
                        </div>
                        <label class="absolute text-sm text-gray-900 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Status</label>
                    </div>
                </form>
            </div>
            
            <!-- Tab Tahap Content -->
            <div class="hidden p-4 rounded-lg border border-primary-100 dark:bg-gray-800" id="tahap" role="tabpanel" aria-labelledby="tahap-tab">
                <div class="md:flex">
                    <!-- Daftar Tab -->
                    <ul class="flex-column space-y space-y-4 text-sm font-medium text-fontdark dark:text-gray-400 md:me-4 mb-4 md:mb-0" id="subtahap-tab" data-tabs-toggle="#subtahap-tab-content" role="tablist" data-tabs-active-classes="text-white bg-primary-100 dark:bg-gray-500" data-tabs-inactive-classes="text-fontdark bg-primary-30 hover:bg-primary-100 dark:bg-gray-300 dark:hover:bg-gray-500">
                        <% const tahap = kegiatan.statusTahap; %>

                        <!-- Specify Needs Tab - Selalu aktif -->
                        <li role="presentation">
                            <button type="button"
                                class="inline-flex items-center px-4 py-3 text-white bg-primary-100 rounded-lg w-full dark:bg-gray-500"
                                id="specifyneeds-tab"
                                data-tabs-target="#specifyneeds"
                                role="tab"
                                aria-controls="specifyneeds">
                                Specify Needs
                            </button>
                        </li>

                        <!-- Template Untuk Tahap 2 s/d 8 -->
                        <%
                        const tahapLabels = ['Design', 'Build', 'Collect', 'Process', 'Analyse', 'Disseminate', 'Evaluate'];
                        for (let i = 0; i < tahapLabels.length; i++) {
                            const index = i + 2; // karena tahap2Percentage sampai tahap8Percentage
                            const currPercentage = tahap[`tahap${index}Percentage`];
                            const prevPercentage = tahap[`tahap${index - 1}Percentage`];

                            const isDisabled = prevPercentage !== 100;
                            const label = tahapLabels[i];
                            const id = label.toLowerCase();
                        %>
                        <li role="presentation">
                            <button type="button"
                                class="inline-flex items-center px-4 py-3 rounded-lg w-full <%= isDisabled ? 'cursor-not-allowed' : '' %>"
                                id="<%= id %>-tab"
                                data-tabs-target="#<%= id %>"
                                role="tab"
                                aria-controls="<%= id %>"
                                <%= isDisabled ? 'disabled' : '' %>>
                                <%= label %>
                                <% if (isDisabled) { %>
                                <span class="text-xs italic ml-1">(Belum Dimulai)</span>
                                <% } %>
                            </button>
                        </li>
                        <% } %>

                    </ul>
            
                    <!-- WADAH KONTEN TAB -->
                    <div id="subtahap-tab-content" class="w-full">
                        
                        <%- include('tahap/specifyNeeds', locals) %>
                        
                        <%- include('tahap/design', locals) %>
                        <%- include('tahap/build', locals) %>
                        <%- include('tahap/collect', locals) %>
                        <%- include('tahap/process', locals) %>
                        <%- include('tahap/analyse', locals) %>
                        <%- include('tahap/disseminate', locals) %>
                        <%- include('tahap/evaluate', locals) %>
                    </div>
                </div>
            </div>
        </div>

<!-- Modal Input Tanggal Rencana -->
<div id="input-rencana" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow-sm dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600 border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    Input Tanggal Rencana
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="input-rencana">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <form id="tanggalRencanaForm" class="p-4 md:p-5" onsubmit="return false;">
                <input type="hidden" id="kegiatanId" value="<%= kegiatan.id %>" />
                <div class="grid gap-4 mb-4 grid-cols-2">
                    <div class="col-span-2">
                        <label for="tanggalTahap" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                        <select id="tanggalTahap" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
                            <option selected="">Pilih Tahap</option>
                            <option value="specifyneeds">Specify Needs</option>
                            <option value="design">Design</option>
                            <option value="build">Build</option>
                            <option value="collect">Collect</option>
                            <option value="process">Process</option>
                            <option value="analyse">Analyse</option>
                            <option value="disseminate">Disseminate</option>
                            <option value="evaluate">Evaluate</option>
                        </select>
                    </div>
                    <% for (let i = 1; i <= 8; i++) { %>
                        <div class="col-span-2 sm:col-span-1 subtahap" id="subtahap-wrapper-<%= i %>" data-subtahap="<%= i %>">
                            <label for="subTahap<%= i %>" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Subtahap <%= i %></label>
                            <div class="relative max-w-sm">
                            <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                                </svg>
                            </div>
                            <input
                                datepicker
                                datepicker-orientation="top" datepicker-format="dd-mm-yyyy"
                                id="subTahap<%= i %>"
                                type="text"
                                placeholder="Select date"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"/>
                            </div>
                        </div>
                    <% } %>
                    
                </div>
                <button type="submit" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    Submit
                </button>
            </form>
        </div>
    </div>
</div> 

